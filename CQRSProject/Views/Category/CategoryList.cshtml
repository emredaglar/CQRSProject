@model List<CQRSProject.CQRSDesignPattern.Results.CategoryResults.GetCategoryQueryResult>
@{
    Layout = null;
}

<div class="container">
    <br /><br />
    <table class="table table-hover">
        <tr>
            <th>#</th>
            <th>Kategori Adı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td><a href ="/Category/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
                <td><a href ="/Category/UpdateCategory/@item.CategoryId" class="btn btn-danger">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/Category/CreateCategory/" class="btn btn-danger">Yeni Kategori</a>
</div>